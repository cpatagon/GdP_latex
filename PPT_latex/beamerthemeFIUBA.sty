\mode<presentation> % Configura el modo de presentación.

% Paquetes Requeridos
\RequirePackage{tikz} % tikz se usa para crear gráficos.
\RequirePackage{graphicx} % Se usa para incluir imágenes.
\RequirePackage{amssymb} % Provee símbolos matemáticos adicionales.
\RequirePackage{xcolor} % Se usa para manejar colores.
\RequirePackage{lmodern} % Usa la fuente "Latin Modern", una versión mejorada de "Computer Modern".
\RequirePackage[absolute, overlay]{textpos} % Se usa para posicionar texto en cualquier parte de la página.

% Configuraciones de Tema
\usecolortheme{FIUBA} % Usa el tema de color "FIUBA".
\useinnertheme{FIUBA} % Usa el tema interno "FIUBA" para configurar el diseño de los elementos internos de una diapositiva.
\useoutertheme{FIUBA} % Usa el tema externo "FIUBA" para configurar el diseño de los elementos externos de una diapositiva.

% Configuraciones Adicionales
\setbeamertemplate{navigation symbols}{} % Elimina los símbolos de navegación.
\setbeamertemplate{blocks}[rounded][shadow=true] % Configura los bloques para que tengan esquinas redondeadas y sombras.

\mode<all> % Finaliza la configuración de modo, aplicando todo a todas las diapositivas.
